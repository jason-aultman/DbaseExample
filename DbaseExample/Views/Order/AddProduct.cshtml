@{
}
@model DbaseExample.ViewModels.OrderProductViewModel
<div>
    <h1>
        Add products
    </h1>
</div>
<div>
    @using (Html.BeginForm("AddProductToOrder", "Order"))
    {
    <div class="form-group">
        @Html.LabelFor(m => m.Products)
        @Html.DropDownListFor(m => m.SelectedProduct, new SelectList(Model.Products, "ID", "Name"), "", new { @class="form-control" })
    </div>
    <div>
        @Html.HiddenFor(m=>m.Order.ID)
    </div>
    <button class="btn btn-animate btn-primary" type="submit">Submit</button>
    }
    


</div>
