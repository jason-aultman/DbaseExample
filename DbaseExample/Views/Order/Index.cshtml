@{
}
@model List<Order> 


    <div>
        <h1>Order List</h1>
    </div>


<div>
    <h3>Available orders</h3>
</div>
<table class="table table-striped table-bordered">
    <thead class="thead-light">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Delete</th>
            <th scope="col">Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Order o in Model)
        {
            <tr>
                <th scope="row">@o.ID</th>
                <td>@Html.ActionLink("Delete", "DeleteOrder", "Order", new { ID = o.ID }) </td>
                <td>@Html.ActionLink("Edit", "Edit", "Order", new { ID = o.ID })</td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Create New Order", "Edit", "Order")


