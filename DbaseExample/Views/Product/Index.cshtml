@{
}
@model List<Product>
@Html.ActionLink("Create New Product", "Edit", "Product")

<table class="table table-striped table-bordered">
    <thead class="thead-light">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Quantity</th>
            <th scope="col">Units</th>
            <th scope="col">Price</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Product p in Model)
        {
        <tr>
            <th scope="row">@p.ID</th>
            <td>@p.Name</td>
            <td>@p.Quantity</td>
            <td>@p.Units</td>
            <td>@p.Price</td>
            <td>@Html.ActionLink("Edit", "Edit", "Product", new { ProductID = p.ID})  </td>
            <td>@Html.ActionLink("Delete", "Delete", "Product", new { ID = p.ID})  </td>

        </tr>

        }
    </tbody>
</table>